
<div class="form-wrapper sm:w-96 mx-auto">
<h1 class="text-2xl mb-3 font-bold text-gray-600">Reset</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    <%= error_tag(resource, :email) %>
  </div>


  <%= f.submit "Reset password", class: "btn bg-primary" %>

<% end %>

<%= render "devise/shared/links" %>
</div>