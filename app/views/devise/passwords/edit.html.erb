<div class="form-wrapper sm:w-96 mx-auto">
<h1 class="text-2xl mb-3 font-bold text-gray-600">Change your password</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>  
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password" %>
    <%= error_tag(resource, :password) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password" %>
    <%= error_tag(resource, :password_confirmation) %>
  </div>

  <%= f.submit "Change my password", class: "btn bg-primary" %>
<% end %>

<%= render "devise/shared/links" %>
</div>