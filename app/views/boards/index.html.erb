<div class="boards">
  <% @boards.each do |board| %>
    <div class="bg-primary-lightest p-4 mb-1 rounded-md flex justify-between items-center">
      <div class="body">
        <%= link_to board.name, board_path(board.slug), class: "font-bold text-gray-600" %>
        <p class="text-gray-400"><%= board.body %></p>
      </div>
      <div class="font-bold text-lg text-gray-400"><%= board.posts_count %></div>
    </div>
  <% end %>
  <p class="text-primary-lighter text-center my-6">
    <%= link_to "Suggest a board", new_board_path, class: "underline" %>
  </p>
</div>